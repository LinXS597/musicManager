<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.zucc.musicmanager.mapper.BaseMapper">
    <select id="getSongdata" resultType="Integer">
        select count(*) from tbl_songinfo
    </select>
    <select id="getPlaydata" resultType="Integer">
        select count(*) from tbl_playinfo
    </select>
    <select id="getUserdata" resultType="Integer">
        select count(*) from tbl_user
    </select>
    <select id="getCommentdata" resultType="Integer">
        select count(*) from tbl_songcomment
    </select>
</mapper>